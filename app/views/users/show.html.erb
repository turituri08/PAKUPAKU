<div class="container">

    <div class="card col-lg-8 offset-lg-2 mx-auto mt-4 px-0">


      <div class="card-header">
        <div class="row">

          <div class="col-7">
            <h4 class="text-left"><%= @user.user_name %></h4>
          </div>
          <div class="col-5">
            <% if @user == current_user %>
              <div class="btn-sm btn-outline-info text-center">プロフィールを編集</div>
            <% end %>
          </div>

        </div>
      </div>
      <% if @user.sex == "男性" %>
        <div class="card-body profile-card-men">
      <% elsif @user.sex == "女性" %>
        <div class="card-body profile-card-woman">
      <% else %>
        <div class="card-body">
      <% end %>
        <div class="row border-bottom">

          <div class="col-3">
            <%= attachment_image_tag @user, :profile_image, :fill, 20, 20, fallback: "no_image.png", class:"rounded-circle"; %>
          </div>
          <div class="col-3 small text-center">投稿数</br><%= @user.contents.count %></div>
          <div class="col-3 small text-center">フォロー数</div>
          <div class="col-3 small text-center">フォロワー数</div>

        </div>

        <div class="row border-bottom p-2">

          <div class="col-4">
            <p><%= @user.user_name %></p>
            <p class="text-black-50"><%= @user.created_at %></p>
          </div>
          <div class="col-8">
            紹介文
          </div>

        </div>

            <p class="card-text"></p>

        </div>
    </div>
</div>