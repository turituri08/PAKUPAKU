<% @contents.each do |content| %>
  <div class="card w-50 mx-auto mt-4">
      <div id="slider">
        <% content.content_images.each do |image| %>
          <%= link_to content_path(content.id) do %>
            <%= attachment_image_tag image, :image, class:"card-img-top"; %>
          <% end %>
        <% end %>
      </div>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= attachment_image_tag content.user, :profile_image, :fill, 60, 60, fallback: "no_image.png", class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-text">本文：<%= content.body %></p>
          <span><i class="fas fa-user"></i> By <%= content.user.name %> ｜ </span>
          <!--<span><%#= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id), class:"text-dark" %></span>-->
        </div>
      </div>
    </div>
  </div>
<% end %>