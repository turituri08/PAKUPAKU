<div class="container">
  <% @contents.each do |content| %>
    <div class="card w-50 mx-auto mt-4">
      <div class="card-header">
        <div class="row">
          <div class="col-2">
            <%= attachment_image_tag content.user, :profile_image, :fill, 20, 20, fallback: "no_image.png", class:"rounded-circle"; %>
          </div>
          <div class="col-5 text-left">
            <%#= link_to user_path(content.user) do %>
              @<%= content.user.user_name %>
            <%# end %>
          </div>
          <div class="col-5 text-right">
            <div class ="text-black-50"><%= content.target_age %>向けの投稿</div>
          </div>
        </div>
      </div>
        <div class="slider">
          <% content.content_images.each do |image| %>
            <%= link_to content_path(content.id) do %>
              <%= attachment_image_tag image, :image, class:"card-img-top"; %>
            <% end %>
          <% end %>
        </div>
      <div class="card-body">
        <div class="row">
          <div class="col-10">
            <p class="card-text">本文：<%= content.body %></p>
            <!--<span><%#= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id), class:"text-dark" %></span>-->
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>