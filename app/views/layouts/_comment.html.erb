<%= form_with model: comment, url: {controller: 'comments', action: 'create', content_id: content.id }, local: true do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <div class="row">
    <div class="col-8">
      <%= f.text_field :comment, placeholder: "コメントを入力", class: "form-control" %>
    </div>
    <%= f.hidden_field :content_id, :value => content.id %>
    <div class="col-2">
      <%= f.submit "送信", class: "btn btn-outline-secondary mr-2" %>
    </div>
  </div>
<% end %>
