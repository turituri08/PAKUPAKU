<% if content.favorited_by?(current_user) %>
    <%= link_to content_favorites_path(content), method: :delete, remote: true, class: "deco-none" do %>
      <h5 class="favorited fas fa-star mr-1 pb-2"></h5><%= content.favorites.count %>
    <% end %>
  <% else %>
    <%= link_to content_favorites_path(content), method: :post, remote: true, class: "deco-none" do %>
      <h5 class="far fa-star mr-1 pb-2"></h5><%= content.favorites.count %>
    <% end %>
<% end %>