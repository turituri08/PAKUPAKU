<div class="modal fade" id="content-edit-modal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-body">
        <%= form_with model:@content, local:true do |f| %>
        
          <div class="form-group row mt-5">
            <label class="col-md-4 col-form-label text-md-right"><%= f.label :画像 %></label>
            <div class="col-md-6">
              <%= f.attachment_field :content_images_images, multiple: true %>
            </div>
          </div>
      
          <div class="form-group row mt-3">
            <label class="col-md-4 col-form-label text-md-right"><%= f.label :本文 %></label>
            <div class="col-md-6">
              <%= f.text_area :body, class: "form-control" %>
            </div>
          </div>
      
          <div class="form-group row">
            <label class="col-md-4 col-form-label text-md-right"><%= f.label :お子様の年齢 %></label>
            <div class="col-md-6 pt-2">
              <%= f.select :target_age, ['0歳', '1歳', '2歳', '3歳', '4歳以上'], { include_blank: '選択してください'}, {class: 'form-control'} %>
            </div>
          </div>
          
          <div class="actions">
            <%= f.submit "変更", class: "btn btn-info mt-4 mb-4" %>
          </div>
          
        <% end %>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
  　   </div>
    </div>
  </div>
</div>