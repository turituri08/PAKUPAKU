<div class="card fixed-bottom">
  <div class="card-body col-lg-6 offset-lg-3 mx-auto px-0">
    <div class="row text-center">
      <div class="col-2 offset-1">
        <%= link_to new_content_path, class: "deco-none-footer" do %>
          <h3 class="fas fa-pencil-alt" data-toggle="tooltip" title="新規投稿" data-placement="bottom"></h3>
        <% end %>
      </div>
      
      <% if current_page?(user_path(current_user)) %>
        <div class="col-2">
          <h3 id="scroll" class="fas fa-home deco-none-footer" ></h3>
        </div>
      <% else %>
        <div class="col-2">
          <%= link_to user_path(current_user), class: "deco-none-footer" do %>
            <h3 class="fas fa-home" data-toggle="tooltip" title="マイページ" data-placement="bottom"></h3>
          <% end %>
        </div>
      <% end %>
      
      <% if current_page?(users_path) %>
        <div class="col-2">
          <h3 id="scroll" class="fas fa-users deco-none-footer" ></h3>
        </div>
      <% else %>
        <div class="col-2">
          <%= link_to users_path, class: "deco-none-footer" do %>
            <h3 class="fas fa-users" data-toggle="tooltip" title="ユーザー一覧" data-placement="bottom"></h3>
          <% end %>
        </div>
      <% end %>
      
      <% if current_page?(contents_path) %>
        <div class="col-2">
          <h3 id="scroll" class="fas fa-utensil-spoon deco-none-footer"></h3>
        </div>
      <% else %>
        <div class="col-2">
          <%= link_to contents_path, class: "deco-none-footer" do %>
            <h3 class="fas fa-utensil-spoon" data-toggle="tooltip" title="投稿一覧" data-placement="bottom"></h3>
          <% end %>
        </div>
      <% end %>
      
      <div class="col-2">
        <%= link_to notifications_path, class: "deco-none-footer" do %>
          <% if unchecked_notifications.any? %>
            <h3 class="fas fa-bell fa-stack-2x" data-toggle="tooltip" title="通知" data-placement="bottom"></h3>
            <i class="fas fa-circle n-circle fa-stack-1x"></i>
          <% else %>
            <h3 class="fas fa-bell" data-toggle="tooltip" title="通知" data-placement="bottom"></h3>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  $('[data-toggle="tooltip"]').tooltip();
</script>