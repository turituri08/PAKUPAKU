<div class="card col-lg-6 offset-lg-3 mx-auto px-0 fixed-bottom">
  <div class="card-body">
    <div class="row text-center">
      <div class="col-2">
        <%= link_to new_content_path, class: "deco-none-footer" do %>
          <h4 class="fas fa-plus-circle" data-toggle="tooltip" title="新規投稿" data-placement="bottom"></h4>
        <% end %>
      </div>
      <div class="col-2">
        <%= link_to user_path(current_user), class: "deco-none-footer" do %>
          <h4 class="fas fa-home" data-toggle="tooltip" title="マイページ" data-placement="bottom"></h4>
        <% end %>
      </div>
      <div class="col-2">
        <%= link_to users_path, class: "deco-none-footer" do %>
          <h4 class="fas fa-users" data-toggle="tooltip" title="ユーザー一覧" data-placement="bottom"></h4>
        <% end %>
      </div>
      <div class="col-2">
        <%= link_to contents_path, class: "deco-none-footer" do %>
          <h4 class="fas fa-utensil-spoon" data-toggle="tooltip" title="投稿一覧" data-placement="bottom"></h4>
        <% end %>
      </div>
      <div class="col-2">
        <h4 class="fas fa-search" data-toggle="tooltip" title="検索" data-placement="bottom"></h4>
      </div>
      <div class="col-2">
        <h4 class="fas fa-bell" data-toggle="tooltip" title="通知" data-placement="bottom"></h4>
      </div>
    </div>
  </div>
</div>

<script>
  $('[data-toggle="tooltip"]').tooltip();
</script>