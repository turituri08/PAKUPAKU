<% visitor = notification.visitor %>
<% visited = notification.visited %>
<div class="form-inline">
  <span>
    <%= link_to user_path(visitor) do %>
      <%= attachment_image_tag visitor, :profile_image, :fill, 40, 40, fallback: "no_image.png", class:"rounded-circle"; %>
    <% end %>
    <strong>
      <%= visitor.user_name %>
      さんが
      <% case notification.action %>
        <% when 'follow' then %>
          あなたをフォローしました
        <% when 'like' then %>
          <%= link_to 'あなたの投稿', notification.content, style: "font-weight: bold;" %>
          にいいねしました
        <% when 'favorite' then %>
          <%= link_to 'あなたの投稿', notification.content, style: "font-weight: bold;" %>
          にお気に入りしました
        <% when 'comment' then %>
          <% if notification.content.user_id == visited.id %>
            <%= link_to "あなたの投稿", notification.content, style: "font-weight: bold;" %>
            にコメントしました
        <% end %>
      <% end %>
    </strong>
  </span>
  <div class="small text-muted text-right pl-3">
    <%= time_ago_in_words(notification.created_at).upcase %>
  </div>
</div>