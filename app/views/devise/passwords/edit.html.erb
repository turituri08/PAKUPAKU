<div class="container bg-style">
  <div class='col-12 mt-4 text-center padding'>    
    
    <h2 class="mt-5 heading">パスワードの<span class="text">再設定</span></h2>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      
      <div class="form-group row mt-5">
        <div class="col-md-4 offset-md-4 pt-2">
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password",:placeholder => "新パスワード", class: "form-control" %>
          <% if @minimum_password_length %>
            <small class="form-text">※ <%= @minimum_password_length %>文字以上でご入力ください。</small>
          <% end %>
        </div>
      </div>
      
      <div class="form-group row">
        <div class="col-md-4 offset-md-4 pt-2">
          <%= f.password_field :password_confirmation, autocomplete: "new-password",:placeholder => "新パスワード（確認）", class: "form-control" %>
        </div>
      </div>
    
      <div class="actions">
        <%= f.submit "パスワードを変更", class: "btn btn-info mt-4" %>
      </div>
    <% end %>
    
  </div>
</div>

